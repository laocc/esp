{
      "name": "laocc/esp",
      "title": "Efficient Simple PHP",
      "require": {
            "php": ">7.0"
      },
      "require-dev": {
            "php": ">7.0",
            "smarty/smarty": "~3.1"
      },
      "autoload": {
            "files": [
                  "helper/functions.php",
                  "config/define.php",
                  "helper/shutdown.php",
                  "helper/bootstrap.php"
            ],
            "psr-4": {
                  "esp\\core\\": "core/",
                  "esp\\library\\": "library/",
                  "esp\\plugins\\": "plugins/"
            }
      },
      "repositories": {
            "packagist": {
                  "type": "composer",
                  "url": "https://packagist.phpcomposer.com"
            }
      }
}
